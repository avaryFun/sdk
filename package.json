{
  "name": "avary",
  "private": true,
  "workspaces": [
    "packages/@avary/*"
  ],
  "scripts": {
    "build": "bun run turbo build",
    "build:libs": "bun run turbo --filter \"./packages/**\" build",
    "dev": "bun run turbo dev",
    "dev:libs": "bun run turbo --filter \"./packages/**\" dev",
    "test": "bun run turbo test",
    "test:libs": "bun run turbo --filter \"./packages/**\" test",
    "clean:dist": "bun run rimraf \"**/dist\" --glob",
    "clean:node_modules": "bun run rimraf \"**/node_modules\" --glob",
    "change:version": "changeset version",
    "change:publish": "changeset publish",
    "change:status": "changeset status",
    "change:add": "changeset add",
    "prepare": "husky "
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.27.10",
    "@swc/core": "1.10.1",
    "@types/node": "22.7.4",
    "cross-env": "7.0.3",
    "globals": "15.12.0",
    "husky": "^9.1.7",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "turbo": "2.3.1",
    "typescript": "5.6.3",
    "vitest": "2.1.9"
  },
  "engines": {
    "node": ">=20.12.2 <23",
    "npm": "please-use-bun",
    "pnpm": "please-use-bun",
    "yarn": "please-use-bun",
    "bun": ">=1.1.19"
  },
  "dependencies": {
    "bs58": "^6.0.0",
    "commander": "13.0.0",
    "viem": "2.23.5",
    "zod": "3.24.2"
  },
  "packageManager": "bun@1.2.3"
}
